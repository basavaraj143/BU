<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:weightSum="100">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="To avail a 10% discount on your bill, press the avail offer button below"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff">
    </TextView>

    <TextView
        android:id="@+id/login_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="1. The following post will be generated through your account on facebook"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff">
    </TextView>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#5f9"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="2.Show this FB post to the restaurant to avail the offer! "
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:weightSum="4">

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:layout_weight="1"
        android:background="@drawable/availdiscount">

    </TextView>
    </LinearLayout>


</LinearLayout>