        android:id="@+id/view"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_weight="06"
        android:background="@drawable/beermugicon"
         />

        <TextView
