<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/backgroundimage"
        android:scaleType="centerCrop"
        android:id="@+id/back"/>


    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginscreen"
    android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:weightSum="100">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="12"
        android:paddingTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        >
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/splashscreenlogo">
        </ImageView>
        </FrameLayout>

    </LinearLayout>




<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="20.5"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/word"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/lettersword">

    </ImageView>
    </FrameLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/findpub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="16dp"
                android:src="@drawable/findpub">
            </ImageView>

        </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:id="@+id/autoCompleteTextViewlayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_shape">


                <cityautocomplete.CustomAutoCompleteTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/city"
                    android:id="@+id/atv_places"
                    android:textColor="#000"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center"
                    android:dropDownWidth="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:selectAllOnFocus="true"
                    android:textCursorDrawable="@drawable/blackpipe"
                    android:completionThreshold="1"
                    android:layout_weight="3.5"
                    android:inputType="textAutoComplete|textAutoCorrect|textFilter|text|textCapWords"
                    >
                </cityautocomplete.CustomAutoCompleteTextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loc"
                    android:background = "@null"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/locaicon"
                    android:paddingEnd="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    />

            </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/my_shape"
        android:orientation="horizontal"
        android:weightSum="4">

        <cityautocomplete.CustomAutoCompleteView1
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="@string/like"
            android:id="@+id/autoCompleteTextView"
            android:textColor="#000"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:popupBackground="#000"
            android:dropDownHeight="wrap_content"
            android:dropDownWidth="wrap_content"
            android:background="@android:color/transparent"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@drawable/blackpipe"
            android:completionThreshold="1"
            android:layout_weight="3.5"
            android:dropDownAnchor="@+id/autoCompleteTextView"
            android:inputType="textAutoComplete|textAutoCorrect|textFilter|text|textCapWords"
            >
        </cityautocomplete.CustomAutoCompleteView1>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loc1"
            android:background = "@null"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/searchbuttonicon"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
          />



    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_weight="5">



    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="10">
    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/searchbuttonpress"
    />

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/layout4"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingStart="50dp"
                android:paddingEnd="20dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/or17"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingStart="20dp"
                android:paddingEnd="50dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:background="@drawable/left"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/winebutton"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/winebeershoppress" />

</LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:layout_weight="10">


        </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:gravity="top"
    android:layout_weight="15.5">
    <ImageView
        android:id="@+id/textview1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/belowletters"
        android:layout_gravity="bottom">
    </ImageView>


</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:layout_weight="5">


        </LinearLayout>
</LinearLayout>
</FrameLayout>