<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/pop_up"
    android:background="@drawable/popupback"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="4">
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="To avail a 10% discount on your bill, press the avail offer button below"
        android:textColor="#000">
    </TextView>

    <TextView
        android:id="@+id/login_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="1. The following post will be generated through your account on facebook"
        android:textColor="#000">
    </TextView>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textStyle="bold"
        android:textColor="#000"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="2.Show this FB post to the restaurant to avail the offer! "
        android:textColor="#000">
    </TextView>

        <ImageView
            android:id="@+id/create_account"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_marginTop="-15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:src="@drawable/revelbutton">

        </ImageView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="4">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:src="@drawable/close_press">

        </ImageView>

    </LinearLayout>


</LinearLayout>